<html>
<head>
    <title>jmj NG</title>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.26/angular.min.js"></script>
    <style>
        div {
            padding:5px;
        }

        div.state {
            background-color:lightcyan;
            border:1px solid gray;
        }

        div.user {
            background-color:lightgoldenrodyellow;
            border:1px solid gray;
        }

    </style>

</head>

<body ng-app="jmjApp">

    <div class="state" ng-controller="stateController">

        <div>
            <select ng-model="selectedState" ng-options="obj.abbr as obj.name for obj in stateList">
                <option value="">Please select a state</option>
            </select>
        </div>

        <div>Selected State: {{selectedState}}</div>

        <div>StateList json: {{stateList}}</div>

    </div>


    <div class="user" ng-controller="userController">

        <div>
            <input ng-model="user.firstName"></input>
            <input ng-model="user.lastName"></input>

        </div>

        <div> user: {{user}} </div>

        <div> getUserJson(): {{getUserJson()}} </div>
    </div>


    <script>
        var app = angular.module('jmjApp', []);

        app.controller('stateController', function ($scope) {

            $scope.stateList = [
                { abbr: "PA", name: "Pennseelvaniya" },
                { abbr: "NY", name: "New York" },
                { abbr: "NJ", name: "New Jersey" },

            ];

            $scope.selectedState = 'NJ';
        });


        app.controller('userController', function ($scope) {

            $scope.user = {
                firstName: "John",
                lastName: "Smith"
            };

            $scope.getUserJson = function () {
                return angular.toJson($scope.user, true)
            };

        });

    </script>

</body>

</html>
